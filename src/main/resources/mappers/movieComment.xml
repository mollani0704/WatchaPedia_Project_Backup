<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.project.watchapedia.domain.movie.MovieCommentRepository">
  
  	<insert id="insertComment" parameterType="com.project.watchapedia.domain.movie.MovieComment"
  		useGeneratedKeys="true">
  		
  		insert into
  			comment_movie
  		values(
  			0,
  			${user_code},
  			${movie_code},
  			"${comment}",
  			now() 
  		);
  	
  	</insert>
  		
  	<select id="getMovieComment" parameterType="Integer" resultType="com.project.watchapedia.domain.movie.MovieComment">
  		select
  			cm.user_code,
  			cm.movie_code,
  			um.user_name,
  			cm.comment
  		from 
  			comment_movie cm
  		left outer join user_mst um on(um.user_code = cm.user_code)
  		where
  			cm.movie_code = #{userCode};	
  	</select>
  
  </mapper>